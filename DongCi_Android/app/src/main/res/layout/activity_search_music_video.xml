<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/vpContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabMusic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t46dp"
        android:fillViewport="false"
        app:tabIndicatorColor="@color/transparent"
        app:tabIndicatorHeight="@dimen/t2dp"
        app:tabMode="fixed"
        app:tabPaddingEnd="@dimen/t9dp"
        app:tabPaddingStart="@dimen/t9dp"
        app:tabSelectedTextColor="@color/hh_color_a"
        app:tabTextAppearance="@style/tabLayoutTextStyle"
        app:tabTextColor="@color/hh_color_b">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/view_tab_upload_video"
            />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/view_tab_select_music"
            />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/view_tab_capture"
            />

    </android.support.design.widget.TabLayout>
</LinearLayout>

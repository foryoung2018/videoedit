<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_im_detail_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--内容部分-->
    <RelativeLayout
        android:id="@+id/ll_im_detail_other_sound_content"
        style="@style/style_im_detail_other_sound_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/hh_chat_sound_other"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_im_detail_other_sound_flag"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/hh_chat_sign" />
        <!--录音动画水纹效果-->
        <ImageView
            android:id="@+id/iv_im_detail_other_voice_anim"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dip"
            android:background="@drawable/chat_record_voice_anim"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_im_detail_other_sound_time"
            style="@style/style_im_detail_item_other_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:id="@+id/view_im_details_red_bg"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_im_unread_circle_red"
        android:visibility="invisible"></View>
</LinearLayout>
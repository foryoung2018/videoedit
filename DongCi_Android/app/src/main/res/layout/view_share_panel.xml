<?xml version="1.0" encoding="utf-8"?>
<com.wmlive.hhvideo.widget.SuitableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical"
    tools:background="@color/colorAccent">

    <RelativeLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/viewBlankHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/llPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/app_background_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUploadLabel"
                style="@style/tv_d_28"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t8dp"
                android:gravity="center_horizontal"
                android:padding="@dimen/t4dp"
                android:text="上传成功，你可以分享到"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llWeChat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_weixin_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringWeChat"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCircle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_circle_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringCircle"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llWeibo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_weibo_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringWeibo"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llQQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_qq_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringQQ"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/diving_line_height"
                android:background="@color/bg_diving_line" />

            <LinearLayout
                android:id="@+id/llRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llCopy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_copylink_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringCopyUrl"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_download_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringSaveToGallery"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llReport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_report_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringReport"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_delete_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringDelete"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_share_edit_nor" />

                    <TextView
                        android:id="@+id/tvEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringEdit"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llManager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/t24dp"
                    android:paddingTop="@dimen/t24dp"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="@dimen/t24dp"
                        android:layout_height="@dimen/t24dp"
                        android:layout_marginBottom="@dimen/t7dp"
                        android:src="@drawable/icon_profile_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringManager"
                        android:textColor="@color/pop_sheet_text_color"
                        android:textSize="@dimen/t13sp" />
                </LinearLayout>

                <View
                    android:id="@+id/viewEmpty"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/diving_line_height"
                android:background="@color/bg_diving_line" />

            <TextView
                android:id="@+id/tvOk"
                style="@style/tv_a_28"
                android:layout_width="@dimen/t120dp"
                android:layout_height="@dimen/t40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/t25dp"
                android:layout_marginTop="@dimen/t25dp"
                android:background="@drawable/sms_code_selector"
                android:gravity="center"
                android:text="完成"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>


</com.wmlive.hhvideo.widget.SuitableLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlSelectStep"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:visibility="visible">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_publish" />

    <View
        android:id="@+id/viewCenter"
        android:layout_width="@dimen/t1dp"
        android:layout_height="@dimen/t1dp"
        android:layout_centerInParent="true"
        tools:background="@color/hh_color_f" />

    <LinearLayout
        android:id="@+id/llUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/t100dp"
        android:layout_marginEnd="@dimen/t30dp"
        android:layout_toStartOf="@+id/viewCenter"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="@dimen/t75dp"
            android:layout_height="@dimen/t75dp"
            android:layout_margin="@dimen/t15dp"
            android:src="@drawable/icon_publish_upload" />

        <TextView
            style="@style/tv_cc_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringUploadVideo"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/t100dp"
        android:layout_marginStart="@dimen/t30dp"
        android:layout_toEndOf="@+id/viewCenter"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="@dimen/t75dp"
            android:layout_height="@dimen/t75dp"
            android:layout_margin="@dimen/t15dp"
            android:src="@drawable/icon_publish_cam" />

        <TextView
            style="@style/tv_cc_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringCapture"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/t40dp"
        android:layout_height="@dimen/t40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/t8dp"
        android:layout_marginBottom="@dimen/t20dp"
        android:padding="@dimen/t9dp"
        android:src="@drawable/icon_profile_add" />
</RelativeLayout>

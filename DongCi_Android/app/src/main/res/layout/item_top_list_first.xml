<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.wmlive.hhvideo.widget.CustomFontTextView
        style="@style/tv_dd_72"
        android:id="@+id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/t10dp"
        android:layout_marginEnd="@dimen/t15dp"
        android:layout_marginStart="@dimen/t15dp"
        android:background="@color/hh_color_a"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:text="动次TOP榜"
        app:cftv_fontFamily="font/notosans_bold.ttf" />

    <com.wmlive.hhvideo.widget.CustomFontTextView
        android:id="@+id/tvName"
        style="@style/tv_dd_48"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/t15dp"
        android:layout_marginStart="@dimen/t15dp"
        android:background="@color/hh_color_a"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:visibility="gone"
        app:cftv_fontFamily="font/notosans_bold.ttf"
        tools:text="我就是萌萌哒"
        tools:visibility="visible" />

    <com.wmlive.hhvideo.widget.RatioLayout
        android:id="@+id/rlPlayerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="@dimen/t160dp">

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/t15dp"
            android:layout_marginStart="@dimen/t15dp"
            android:layout_marginTop="@dimen/t15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_home_video_default" />

        <ImageView
            android:layout_width="@dimen/t44dp"
            android:layout_height="@dimen/t44dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_home_video_pause" />

        <ImageView
            android:id="@+id/ivLevel"
            android:layout_width="@dimen/t70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/t10dp"
            android:layout_marginTop="@dimen/t30dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_discover_top_one"
            android:textSize="@dimen/t30sp"
            tools:text="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/t45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/t15dp"
            android:layout_marginStart="@dimen/t15dp"
            android:background="@drawable/bg_home_shade" />

        <com.wmlive.hhvideo.widget.CustomFontTextView
            android:id="@+id/tvPeoples"
            style="@style/tv_a_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/t10dp"
            android:layout_marginEnd="@dimen/t10dp"
            android:layout_marginStart="@dimen/t30dp"
            android:ellipsize="end"
            android:lines="1"
            app:cftv_fontFamily="font/notosans_bold.ttf"
            tools:text="输死" />

        <View
            android:id="@+id/cornerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/t15dp"
            android:layout_marginStart="@dimen/t15dp"
            android:background="@drawable/icon_home_corner" />
    </com.wmlive.hhvideo.widget.RatioLayout>

    <ImageView
        android:id="@+id/ivShadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t12dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_shadow3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/t10dp"
        android:layout_marginEnd="@dimen/t15dp"
        android:layout_marginStart="@dimen/t15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/t10dp"
            android:layout_toStartOf="@+id/ivJoin"
            android:orientation="vertical">

            <com.wmlive.hhvideo.widget.CustomFontTextView
                android:id="@+id/tvTopic"
                style="@style/tv_ccc_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/t10dp"
                android:ellipsize="end"
                android:gravity="start"
                android:includeFontPadding="false"
                android:maxLength="14"
                android:maxLines="1"
                android:visibility="gone"
                app:cftv_fontFamily="font/notosans_bold.ttf"
                tools:text="我美美哒"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/t12dp"
                    android:layout_height="@dimen/t12dp"
                    android:src="@drawable/icon_home_like_white"
                    android:tint="@color/hh_color_ccc" />

                <TextView
                    android:id="@+id/tvLikeCount"
                    style="@style/tv_cc_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/t4dp"
                    android:includeFontPadding="false"
                    tools:text="2313" />

                <ImageView
                    android:layout_width="@dimen/t12dp"
                    android:layout_height="@dimen/t12dp"
                    android:layout_marginStart="@dimen/t10dp"
                    android:src="@drawable/icon_home_comment_white"
                    android:tint="@color/hh_color_ccc" />

                <TextView
                    android:id="@+id/tvCommentCount"
                    style="@style/tv_cc_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/t4dp"
                    android:includeFontPadding="false"
                    tools:text="2313" />

            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/ivJoin"
            android:layout_width="@dimen/t90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_discover_create" />

    </RelativeLayout>
</LinearLayout>
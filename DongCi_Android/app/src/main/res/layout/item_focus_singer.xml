<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/t130dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/t15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/top_layout"
            android:layout_width="@dimen/t130dp"
            android:layout_height="@dimen/t130dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/t6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/singer_cover_iv"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/song_name_tv"
            android:layout_below="@+id/top_layout"
            style="@style/tv_dd_32"
            android:layout_marginTop="@dimen/t10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="起床歌"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/singer_name_tv"
            android:layout_below="@+id/song_name_tv"
            style="@style/tv_cc_24"
            android:layout_marginTop="@dimen/t4dp"
            android:layout_marginBottom="@dimen/t15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="一个人的乐队"
            android:singleLine="true"
            android:ellipsize="end"
            tools:visibility="visible" />


</RelativeLayout>
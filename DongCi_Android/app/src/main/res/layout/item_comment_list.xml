<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/t40dp"
            android:layout_height="@dimen/t40dp"
            android:layout_marginBottom="@dimen/t11dp"
            android:layout_marginStart="@dimen/t15dp"
            android:layout_marginTop="@dimen/t11dp"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/t10dp"
            android:layout_marginStart="@dimen/t10dp"
            android:layout_marginTop="@dimen/t14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                style="@style/tv_g_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/t6dp"
                android:ellipsize="end"
                android:lines="1"
                tools:text="张三" />

            <TextView
                android:id="@+id/tvComment"
                style="@style/tv_a_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/t14dp"
                tools:text="这是评论评论条评论这是一条评论评论" />

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/publicHorizontalDivideLine"
        android:layout_marginStart="@dimen/t15dp"
        />
</LinearLayout>
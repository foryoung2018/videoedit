<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/t44dp"
              android:gravity="center"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivCollect"
        android:layout_width="@dimen/t38dp"
        android:layout_height="@dimen/t38dp"
        android:padding="@dimen/t10dp"
        android:src="@drawable/icon_collect"
        />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="@dimen/t38dp"
        android:layout_height="@dimen/t38dp"
        android:layout_marginEnd="@dimen/t5dp"
        android:padding="@dimen/t10dp"
        android:src="@drawable/icon_profile_share"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:extCircle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <com.dongci.sun.gpuimglibrary.common.ExtCircleImageView
        android:id="@+id/ivFilter"
        android:layout_width="@dimen/t60dp"
        android:layout_height="@dimen/t60dp"
        android:layout_margin="@dimen/t5dp"
        android:background="@null"
        extCircle:circleBgColor="@color/transparent"
        extCircle:circleBorderColor="@color/filter_ed"
        extCircle:circleChecked="false"/>

    <TextView
        android:id="@+id/tvTitle"
        style="@style/tv_a_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:shadowColor="@color/transparent_black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        tools:text="特效"/>
</LinearLayout>
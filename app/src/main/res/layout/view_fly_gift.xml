<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFlyTone"
        android:layout_width="@dimen/t40dp"
        android:layout_height="@dimen/t40dp"
        android:visibility="gone"
        tools:background="@color/hh_color_b"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivFlyDiamond"
        android:layout_width="@dimen/t18dp"
        android:layout_height="@dimen/t18dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_acc_diamond"
        android:visibility="gone"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rlHitRoot"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/t60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/svHit"
            android:layout_width="@dimen/t60dp"
            android:layout_height="@dimen/t60dp"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImageScaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/t27dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/t30dp"
            android:background="@drawable/bg_btn_c_first_type_shape80"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/t4dp"
            android:paddingTop="@dimen/t4dp">

            <View
                android:layout_width="@dimen/t25dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/ivDiamond"
                android:layout_width="@dimen/t18dp"
                android:layout_height="@dimen/t18dp"
                android:layout_marginEnd="@dimen/t6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_acc_diamond"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvHitCount"
                style="@style/tv_i_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/t12dp"
                tools:text="200" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rlHit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/t11dp">

            <ImageView
                android:layout_width="@dimen/t38dp"
                android:layout_height="@dimen/t38dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_burst" />

            <TextView
                style="@style/tv_a_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="暴击" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
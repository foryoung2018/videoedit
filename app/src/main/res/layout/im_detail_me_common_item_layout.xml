<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_im_detail_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_im_detail_me_content"
        style="@style/style_im_detail_me_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hh_chat_sound_me"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_im_detail_me_content"
            style="@style/style_im_detail_item_me_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

    <include
        layout="@layout/im__detail_item_status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ll_im_detail_me_content"></include>

</RelativeLayout>
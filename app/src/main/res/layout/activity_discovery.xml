<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wmlive.hhvideo.widget.refreshrecycler.RefreshRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llTop"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/app_background_color"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/t44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/t14dp"
            android:paddingEnd="@dimen/t14dp"
            android:paddingStart="@dimen/t14dp"
            android:paddingTop="@dimen/t14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_back"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rlBell"
            android:layout_width="@dimen/t52dp"
            android:layout_height="@dimen/t44dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/t4dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivBell"
                android:layout_width="@dimen/t30dp"
                android:layout_height="@dimen/t30dp"
                android:layout_centerInParent="true"
                android:padding="@dimen/t4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_discover_notice"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t44dp"
        android:layout_marginEnd="@dimen/t40dp"
        android:layout_marginStart="@dimen/t40dp"
        android:layout_marginTop="@dimen/t24dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:background="@color/colorAccent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/t18dp"
                android:layout_height="@dimen/t18dp"
                android:src="@drawable/icon_discover_search" />

            <TextView
                style="@style/tv_ccc_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/t5dp"
                android:includeFontPadding="false"
                android:text="搜索用户、话题" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/t1dp"
            android:layout_marginTop="@dimen/t10dp"
            android:background="@color/bg_diving_line" />
    </LinearLayout>
</RelativeLayout>




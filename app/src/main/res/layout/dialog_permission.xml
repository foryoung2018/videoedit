<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="@dimen/t270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical"
        tools:background="@color/hh_color_i">

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/t5dp"
            android:layout_marginTop="@dimen/t5dp"
            android:padding="@dimen/t5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_loginpopup_close" />


        <TextView
            android:id="@+id/tvTitle"
            style="@style/tv_d_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="木有开启相机权限呀" />

        <TextView
            android:id="@+id/tvDesc"
            style="@style/tv_b_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/t10dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/t4dp"
            tools:text="木有开启相机权限呀木有开启相机权限呀木有开启相机权限呀木有开启相机权限呀" />

        <TextView
            android:id="@+id/tvOpen"
            style="@style/tv_a_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/t25dp"
            android:layout_marginTop="@dimen/t20dp"
            android:background="@drawable/login_bt_selector"
            android:paddingBottom="@dimen/t10dp"
            android:paddingEnd="@dimen/t44dp"
            android:paddingStart="@dimen/t44dp"
            android:paddingTop="@dimen/t10dp"
            android:text="立即开启" />

    </LinearLayout>

</FrameLayout>
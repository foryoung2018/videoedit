<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvGiftCount"
        style="@style/tv_i_48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/t10dp"
        android:visibility="invisible"
        tools:text="X34"/>

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="@dimen/t75dp"
        android:layout_height="@dimen/t75dp"
        android:background="@drawable/bg_gift_shape50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivGiftImage"
                android:layout_width="@dimen/t40dp"
                android:layout_height="@dimen/t40dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tvPrice"
                style="@style/tv_a_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t5dp"
                android:gravity="center"
                tools:text="20é’»"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
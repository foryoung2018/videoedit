<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="49dip"
                android:background="@color/transparent"
                >


    <LinearLayout
        android:id="@+id/llCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_margin="@dimen/t1dp"
            android:background="@color/transparent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/t1dp"
            android:textSize="@dimen/t10sp"
            android:visibility="gone"
            tools:text="微信"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background_10_white"
        android:layout_toRightOf="@+id/llCenter"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background_10_white"
        android:layout_toLeftOf="@+id/llCenter"
        android:layout_centerVertical="true"/>


    <ImageView
        android:id="@+id/ivRedDot"
        android:layout_width="3dip"
        android:layout_height="3dip"
        android:layout_below="@id/llCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dip"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:background="@drawable/bg_a_shape"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <TextView
        android:id="@+id/tv_accout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:text="@string/user_account_tips"
        android:textColor="@color/bg_black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_accout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="60sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_zuanshi_tt_tips"
                android:textColor="@color/borderline_color"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/user_choose_tips"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/t60dp"
                android:layout_weight="1"
                android:background="@drawable/red_grey_ring_selector"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@drawable/text_color_black_red_selector"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_diament"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@drawable/color_grey_red_selector"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/t60dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:background="@drawable/red_grey_ring_selector"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_money2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@drawable/text_color_black_red_selector"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_diament2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@drawable/color_grey_red_selector"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/t60dp"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:background="@drawable/red_grey_ring_selector"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_money3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@drawable/text_color_black_red_selector"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_diament3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@drawable/color_grey_red_selector"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/user_choose_pay_tips"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon_pay_alipay" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/user_ali_pay"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/rl_ali"
                android:layout_width="30dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_ali"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pay_choose_btn_selector" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon_pay_wechat" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/user_wechat_pay"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/rl_wechat"
                android:layout_width="30dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_wechat"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pay_choose_btn_selector" />
            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_charge"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_btn_conor_pink"
            android:gravity="center"
            android:text="@string/user_charge_tips"
            android:textColor="@color/white"
            android:textSize="16dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/tv_accout"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/t68dp"
            android:layout_height="@dimen/t68dp"
            android:layout_marginBottom="@dimen/t12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_empty" />

        <TextView
            android:id="@+id/tvMessage"
            style="@style/tv_c_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/t25dp"
        android:paddingTop="@dimen/t25dp">

        <TextView
            android:id="@+id/tv_pay_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_wechat_num_tips_1"
            android:textColor="@color/hh_color_b"
            android:textSize="@dimen/t10sp" />

        <TextView
            android:id="@+id/tv_wechat_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_wechat_num_tips_2"
            android:textColor="@color/hh_color_f"
            android:textSize="@dimen/t10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_wechat_num_tips_3"
            android:textColor="@color/hh_color_b"
            android:textSize="@dimen/t10sp" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wmlive.hhvideo.widget.VideoPlayItemView
        android:id="@+id/videoPlayItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wmlive.hhvideo.widget.VideoCommentTabView
        android:id="@+id/llHeaderTabView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoPlayItemView"
        android:orientation="horizontal"
        tools:visibility="visible" />

    <com.wmlive.hhvideo.widget.refreshrecycler.RefreshRecyclerView
        android:id="@+id/commentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/llHeaderTabView" />

    <com.wmlive.hhvideo.widget.refreshrecycler.RefreshRecyclerView
        android:id="@+id/decibelRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_below="@+id/llHeaderTabView"/>

</RelativeLayout>

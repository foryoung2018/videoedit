<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivVolume"
        android:layout_width="@dimen/t42dp"
        android:layout_height="@dimen/t42dp"
        android:padding="@dimen/t10dp"
        android:layout_marginRight="@dimen/t15dp"
        android:src="@drawable/icon_video_topbar_vol_nor" />

    <ImageView
        android:id="@+id/ivEffect"
        android:layout_width="@dimen/t42dp"
        android:layout_height="@dimen/t42dp"
        android:layout_marginLeft="12.5dp"
        android:padding="@dimen/t10dp"
        android:src="@drawable/icon_video_topbar_effects_nor"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivEditing"
        android:layout_width="@dimen/t42dp"
        android:layout_height="@dimen/t42dp"
        android:layout_marginLeft="@dimen/t15dp"
        android:padding="@dimen/t10dp"
        android:src="@drawable/icon_video_topbar_edit_nor" />
</LinearLayout>
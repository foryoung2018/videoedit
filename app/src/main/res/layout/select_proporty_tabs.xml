<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wmlive.hhvideo.widget.ZTablayout.ZTabLayout
        android:id="@+id/ztab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tab_indicatorColor="#FF2120"
        app:tab_indicatorHeight="2dp"
        app:tab_normal_textSize="14sp"
        app:tab_select_textSize="14sp"
        app:tab_textColor="@color/tab_text_color"></com.wmlive.hhvideo.widget.ZTablayout.ZTabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/t1dp"
        android:layout_below="@id/ztab"
        android:background="@color/pop_text_gray_20" />
</RelativeLayout>
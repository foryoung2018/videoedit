<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_other_back"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_comment_delete_cancel"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_height="@dimen/t44dp"
        style="@style/tv_a_30"
        android:gravity="center"
        android:background="@color/hh_color_d"
        android:text="@string/comment_delete_cancel"
        android:layout_alignParentBottom="true"/>


    <TextView
        android:id="@+id/tv_comment_delete"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/tv_a_30"
        android:gravity="center"
        android:background="@color/hh_color_d"
        android:layout_above="@+id/tv_comment_delete_cancel"
        android:text="@string/comment_delete" />





</RelativeLayout>
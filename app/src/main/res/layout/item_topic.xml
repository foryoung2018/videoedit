<?xml version="1.0" encoding="utf-8"?>
<com.wmlive.hhvideo.widget.RatioLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    fresco:ratio="0.75">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@drawable/bg_video_default_4_3"
        fresco:placeholderImageScaleType="centerCrop" />

    <ImageView
        android:id="@+id/ivTag"
        android:layout_width="@dimen/t30dp"
        android:layout_height="@dimen/t30dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/t38dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_shadow_list2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/t18dp"
            android:layout_height="@dimen/t18dp"
            android:src="@drawable/icon_like_small" />

        <TextView
            android:id="@+id/tvCount"
            style="@style/tv_a_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/t5dp"
            tools:text="34234" />
    </LinearLayout>

</com.wmlive.hhvideo.widget.RatioLayout>
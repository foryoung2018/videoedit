<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/t60dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/llPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivType"
            android:layout_width="@dimen/t12dp"
            android:layout_height="@dimen/t12dp"
            android:layout_marginEnd="@dimen/t3dp"
            android:layout_marginStart="@dimen/t15dp"
            android:src="@drawable/icon_discover_topic" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/tv_dd_28"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textStyle="bold"
            tools:text="垃圾" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/t15dp"
            android:textColor="@color/pop_text_gray"
            android:textSize="@dimen/t12sp"
            android:textStyle="bold"
            tools:text="0人参与" />

    </LinearLayout>

    <View
        style="@style/publicHorizontalDivideLine"
        android:layout_alignParentBottom="true" />
</RelativeLayout>